# Database
DATABASE_URL="postgresql://mediabot:mediabot_dev@localhost:5432/mediabot"

# Redis
REDIS_URL="redis://localhost:6379"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your-bot-token-from-botfather"

# Claude API (Anthropic)
ANTHROPIC_API_KEY="sk-ant-xxxxx"

# Google AI - Gemini (para análisis de menciones, pre-filtro, hashtags, insights, temas emergentes)
GOOGLE_API_KEY="your-google-ai-api-key"
GEMINI_MODEL="gemini-2.0-flash"

# Google Custom Search (para colección de noticias via CSE)
# NOTA: GOOGLE_API_KEY es para la AI Gemini; GOOGLE_CSE_API_KEY es para el motor de búsqueda de noticias.
#       Son keys distintas de proyectos/servicios diferentes en Google Cloud.
GOOGLE_CSE_API_KEY="your-google-cse-api-key"
GOOGLE_CSE_CX="your-custom-search-engine-id"

# NewsData.io
NEWSDATA_API_KEY="your-newsdata-api-key"

# EnsembleData (Social Media API)
ENSEMBLEDATA_TOKEN="your-ensembledata-token"

# NextAuth
NEXTAUTH_SECRET="generate-a-random-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Watchdog (alerta cuando workers se congelan)
WATCHDOG_ENABLED="true"
WATCHDOG_ADMIN_CHAT_ID="993823557"     # Chat ID de Telegram del super admin
WATCHDOG_THRESHOLD_HOURS="12"          # Alertar si no hay menciones en 12h
WATCHDOG_CHECK_CRON="0 * * * *"        # Verificar cada hora
WATCHDOG_ALERT_COOLDOWN_HOURS="24"     # No repetir alerta por 24h

# App
NODE_ENV="development"
LOG_LEVEL="info"
