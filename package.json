{
  "name": "news-agent",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:bot": "npm run dev -w packages/bot",
    "dev:workers": "npm run dev -w packages/workers",
    "dev:web": "npm run dev -w packages/web",
    "build": "npm run build -w packages/shared && npm run build -w packages/bot && npm run build -w packages/workers && npm run build -w packages/web",
    "build:shared": "npm run build -w packages/shared",
    "db:generate": "npx prisma generate --schema=prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev --schema=prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=prisma/schema.prisma",
    "lint": "eslint packages/*/src/**/*.ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "playwright": "^1.58.0",
    "prisma": "^6.16.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1"
  }
}
